#departList .bg-img {
  width: 100%;
  position: absolute;
}
#departList #tags view {
  margin: 0 20rpx;
  height: 40rpx;
}
#departList #tags view::after {
  border: 1rpx solid #00A7F4;
}
#departList #searcher {
  background-color: #FFF;
}
#departList #list > view:first-child {
  background: -webkit-gradient(linear, left top, left bottom, from(#EBEBEB), to(#FFFFFF));
  background: -o-linear-gradient(#EBEBEB, #FFFFFF);
  background: linear-gradient(#EBEBEB, #FFFFFF);
}

